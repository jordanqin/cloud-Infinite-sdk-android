<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <com.tencent.qcloud.infinite.sample.base.BaseImageListView
            android:id="@+id/view_imagelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tencent.qcloud.infinite.sample.base.BaseImageInfoView
            android:id="@+id/view_imageinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rg_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_tpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TPG" />

            <RadioButton
                android:id="@+id/rb_png"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PNG" />

            <RadioButton
                android:id="@+id/rb_jpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JPG" />

            <RadioButton
                android:id="@+id/rb_bmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMP" />

            <RadioButton
                android:id="@+id/rb_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIF" />

            <RadioButton
                android:id="@+id/rb_webp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="WEBP" />

            <RadioButton
                android:id="@+id/rb_yjpeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YJPEG" />

            <RadioButton
                android:id="@+id/rb_heif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="HEIF" />
        </RadioGroup>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:text="加载图片"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>