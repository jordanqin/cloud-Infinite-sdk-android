<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">
        <Button
            android:id="@+id/btn_responsive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="自适应图片加载"/>

        <Button
            android:id="@+id/btn_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="缩放"/>

        <Button
            android:id="@+id/btn_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="剪裁"/>

        <Button
            android:id="@+id/btn_rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="旋转"/>

        <Button
            android:id="@+id/btn_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="格式转换"/>

        <Button
            android:id="@+id/btn_gif_opt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="GIF优化"/>

        <Button
            android:id="@+id/btn_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="质量调节"/>

        <Button
            android:id="@+id/btn_blur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="高斯模糊"/>

        <Button
            android:id="@+id/btn_sharpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="锐化"/>

        <Button
            android:id="@+id/btn_watermark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="图片水印、文字水印"/>

        <Button
            android:id="@+id/btn_ave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="图片主色"/>

        <Button
            android:id="@+id/btn_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="去除元信息"/>
    </LinearLayout>
</ScrollView>