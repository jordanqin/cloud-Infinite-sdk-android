<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">
        <Button
            android:id="@+id/btn_tpg_glide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:text="Glide加载TPG图片"/>

        <Button
            android:id="@+id/btn_tpg_memory_glide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:text="Glide TPG MEMORY"/>

        <Button
            android:id="@+id/btn_tpg_webp_glide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:text="Glide TPG 对比 WebP"/>

        <Button
            android:id="@+id/btn_tpg_image_list_glide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:text="Glide TPG 混合列表"/>

        <Button
            android:id="@+id/btn_glide_original_image_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAllCaps="false"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="Glide原图兜底"/>

        <Button
            android:id="@+id/btn_tpg_fresco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:text="Fresco加载TPG图片"/>

        <Button
            android:id="@+id/btn_tpg_memory_fresco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:text="Fresco TPG MEMORY"/>

        <Button
            android:id="@+id/btn_tpg_image_list_fresco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:text="Fresco TPG 混合列表"/>

        <Button
            android:id="@+id/btn_fresco_original_image_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAllCaps="false"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="Fresco原图兜底"/>

        <Button
            android:id="@+id/btn_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:textAllCaps="false"
            android:visibility="gone"
            android:text="GIF TPG"/>

        <Button
            android:id="@+id/btn_decode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="解码测试"/>

        <Button
            android:id="@+id/btn_super_large_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="超大图"/>

        <Button
            android:id="@+id/btn_small_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:drawableRight="@drawable/arrow"
            android:text="小图网络并发测试"/>
    </LinearLayout>
</ScrollView>